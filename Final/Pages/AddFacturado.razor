@page "/AddFactura"
@using Final.Data
@inject PFacturadoService Service
@inject NavigationManager NavigationManager

<h3>Agregar Producto Facturado</h3>

<form>
    <div class="row">
        <div class="form-group col-md-4">
            <label for="Nombre">Nombre</label>
            <input type="text" class="form-control" id="inputNombre" placeholder="Nombre" @bind="@facturas.Nombre">
        </div>
        <div class="form-group col-md-4">
            <label for="inputprecio">Cantidad</label>
            <input type="text" class="form-control" id="precio" placeholder="Cantidad" @bind="@facturas.Cantidad">
        </div>
        <div class="form-group col-md-8">
            <label for="inputcantidad">Descripcion</label>
            <input type="text" class="form-control" id="cantidad" placeholder="Descripcion" @bind="@facturas.Descripcion">
        </div>
        <div class="form-group col-md-4">
            <label for="inputcantidad">IdFactura</label>
            <input type="text" class="form-control" id="cantidad" placeholder="cantidad del servicio" @bind="@facturas.Id_Factura">
        </div>
      
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@CrearFacturado" value="Save" />
                <input type="button" class="btn btn-danger" @onclick="@Cancel" value="Cancel" />

            </div>

        </div>

    </div>

</form>




@code {

    Producto_Facturado facturas = new Producto_Facturado();

    protected void CrearFacturado()
    {
        Service.Create(facturas);
        NavigationManager.NavigateTo("FacturadoInfo");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("FacturadoInfo");

    }

}
